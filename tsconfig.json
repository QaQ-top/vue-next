{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "puppeteer", "node"],
    "rootDir": ".",
    "paths": {
      "@vue/compat": ["packages/vue-compat/src"],
      "@vue/*": ["packages/*/src"],
      "vue": ["packages/vue/src"],
      "@src/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@route/*": ["src/route/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@models/*": ["src/models/*"],
      "@themes/*": ["src/themes/*"],
      "@utils/*": ["src/utils/*"],
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "packages/runtime-dom/types/jsx.d.ts",
    "packages/*/__tests__",
    "test-dts",
    "src",
    "packages/shim.d.ts",
  ]
}
